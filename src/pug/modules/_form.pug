mixin form-label(name)
  label.modal-form__label= name

mixin input(type, name, value, className, placeholder, required)
  input(type = `${type}` name = `${name}` value=`${value}` class=`${className}` placeholder=`${placeholder}` required)

mixin input-error(className, text)
  div(class=`error ${className}`)= text

mixin textarea(name, className)
  textarea(name = `${name}` class=`${className}` required)

mixin select
  .select
    input(class="select__input" type="hidden" name="" requered)
    .select__head
    .select__list
      .select__item Контейнер 20'HC
      .select__item Контейнер 40'HC
      .select__item Контейнер 20'HC
      .select__item Контейнер 40'HC