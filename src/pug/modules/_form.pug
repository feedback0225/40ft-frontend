
mixin form(className)
  form(action="#" class=`modal-form ${className}`)
    .modal-form__row.modal-form__row--between
      .modal-form__item.modal-form__item--33
        +input('text', 'name', '', 'modal-form__input', '')
        +form-label('Ваше имя*')
      .modal-form__item.modal-form__item--33
        +input('text', 'phone', '', 'modal-form__input', '' )
        +form-label('Ваш телефон*')
      .modal-form__item.modal-form__item--33
        +input('email', 'email', '', 'modal-form__input', '')
        +form-label('E-mail')
    .modal-form__row
      +input('submit', '', 'Купить контейнер', 'modal-form__submit', '')


