
mixin header-inner-color()
  header.header.header--inner-color.section
    .container.row.row--center
      //- logo
      .logo.header__logo
        img(src="img/img-logo-blue.svg" alt="")
      //- menu
      ul.menu.header__menu
        li.menu__item
          a(href="#" class="menu__link") О компании
        li.menu__item
          a(href="#" class="menu__link") Контейнеры
            span.menu__link-icon
              +icon('icon-arrow-next')
          .wrapper-menu-inner
            .container
              a(href="#back" class="wrapper-menu-inner__head js-link-back")
                .wrapper-menu-inner__head-icon
                  +icon('icon-arrow-back')
                .wrapper-menu-inner__head-name Контейнеры
              ul.menu-inner.wrapper-menu-inner__menu
                li.menu-inner__item
                  a(href="#" class="menu-inner__link") Контейнеры 20'HC высокие
                li.menu-inner__item
                  a(href="#" class="menu-inner__link") Контейнеры 20'HC низкие
                li.menu-inner__item
                  a(href="#" class="menu-inner__link") Контейнеры 40'HC высокие
        li.menu__item
          a(href="#" class="menu__link") Услуги
        li.menu__item
          a(href="#" class="menu__link") Клиентам
        li.menu__item
          a(href="#" class="menu__link") Контакты
      //- phone
      .block-phone.header__block-phone
        .block-phone__item
          .block-phone__icon
            +icon('icon-block-phone-dark')
          .block-phone__data
            a(href="tel: +74959343434" class="block-phone__number") +7 495 934-34-34
            .block-phone__data-name Отдел продаж
        .block-phone__item
          .block-phone__icon
            +icon('icon-block-phone-dark')
          .block-phone__data
            a(href="tel: +78009993434" class="block-phone__number") 8 800 999-34-34
            .block-phone__data-name Бесплатный
      //- language
      .header__select-language
        .select-language
          .select-language__row
            .select-language__value
              +icon('icon-language-ru')
            .change-language.js-change-language
              +icon('icon-change-language-dark')
          .list-select-language.select-language__list
            .list-select-language__item
              +icon('icon-language-ru')
              span.list-select-language__text Ru
            .list-select-language__item
              +icon('icon-language-gb')
              span.list-select-language__text En
            .list-select-language__item
              +icon('icon-language-cn')
              span.list-select-language__text Ch
      // mobile button
      .mobile-button.js-mobile-button
        +icon('icon-menu-open')
          
